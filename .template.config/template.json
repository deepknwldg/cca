{
  "$schema": "http://json.schemastore.org/template",
  "author": "Web Team",
  "classifications": [ "Web", "ASP.NET Core", "Clean Architecture" ],
  "identity": "Aktiv.CleanArchitecture.Template",
  "name": "Aktiv Clean Architecture API",
  "shortName": "aktiv-clean",
  "sourceName": "Template",
  "defaultName": "AktivSolution",
  "preferNameDirectory": false,
  "tags": {
    "language": "C#",
    "type": "solution"
  },

  "guids": [
    "2248b4b0-55df-43fc-baf0-4eb4432236e3",
    "b71fd04f-a053-4782-9915-ccb989566827",
    "a2ee934c-1c36-4407-83c7-9faac2199f2e",
    "eb026cb4-3827-4d1a-98f3-6a698a0a9d1d",
    "7a44a6d2-4071-4788-883e-0187a7042016"
  ],

  "symbols": {
    "Port": {
      "type": "parameter",
      "description": "Порт, на котором будет работать API",
      "defaultValue": "5000",
      "replaces": "5000"
    }
  },

  "primaryOutputs": [
    { "path": "{{SolutionName}}.sln" }
  ],

  "postActions": [
    {
      "actionId": "E3C6EF5F-6E7A-44A8-A5C4-8F8A3C5A5F4A",
      "condition": "(HostIdentifier == \"dotnetcli\")",
      "args": {
        "files": [ "{{SolutionName}}.sln" ]
      }
    },
    {
      "actionId": "B4E2A0A5-0A2B-4B9A-9F8A-8D2B5C4B3A2E",   // dotnet restore
      "condition": "(HostIdentifier == \"dotnetcli\")",
      "args": {
        "restoreProject": "{{SolutionName}}.sln"
      }
    }
  ]
}